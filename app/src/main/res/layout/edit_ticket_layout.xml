<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvCustomerID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Customer ID:"
        android:layout_margin="4dp"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:layout_below="@id/tvCustomerID"
        android:layout_margin="4dp"
        android:textSize="16sp"
        />

    <EditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/corner_black_border"
        android:layout_below="@id/txtName"
        android:padding="8dp"
        android:layout_marginBottom="10dp"
        android:hint="Customer Name"
        android:textColor="@color/grey_60"
        android:theme="@style/EditText.Blue" />


    <TextView
        android:id="@+id/txtContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact:"
        android:layout_below="@id/etName"
        android:layout_margin="4dp"
        android:textSize="16sp"
        />

    <EditText
        android:id="@+id/etContact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtContact"
        android:padding="8dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/corner_black_border"
        android:hint="Customer Contact"
        android:textColor="@color/grey_60"
        android:theme="@style/EditText.Blue" />


</RelativeLayout>